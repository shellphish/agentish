FROM python:3.11-slim

WORKDIR /app

# Install only what the UI server needs
RUN pip install --no-cache-dir flask flask-cors pyyaml

# Copy backend and frontend
COPY backend/ backend/
COPY frontend/ frontend/

EXPOSE 8000

# The challengish.yml is mounted at runtime via docker-compose volume
CMD ["python", "backend/server_agentish.py", "--port", "8000"]
