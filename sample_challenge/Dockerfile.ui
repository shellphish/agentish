FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Install Python dependencies for UI server
RUN pip install --no-cache-dir \
    flask \
    flask-cors \
    pyyaml

# Copy backend (UI server only)
COPY backend/server_ui.py backend/
COPY backend/mcp_manager.py backend/

# Copy compiler (needed for validation/compilation preview)
COPY compiler/ compiler/

# Copy frontend assets
COPY frontend/ frontend/

# Create output directory for compilation artifacts
RUN mkdir -p output

# Environment variables
ENV SANDBOX_CONFIG_PATH=/config/sandbox.yml
ENV CHALLENGISH_CONFIG_PATH=/config/challengish.yml

EXPOSE 8000

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python3", "backend/server_ui.py", "--port", "8000"]
